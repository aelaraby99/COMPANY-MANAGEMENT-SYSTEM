@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>All Users</h1>
<br />
<br />
<div class="row justify-content-center align-items-center">
    <form class="row justify-content-between align-items-center col-8 offset-1" role="search">
        <input class="form-control w-75" type="search" placeholder="Search By Email" name="Email">
        <button class="w-25 btn btn-outline-success" type="submit">Search</button>
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-4">
        <thead class="bg-info">
            <tr>
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.FName)</th>
                <th>@Html.DisplayNameFor(U => U.LName)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.FName</td>
                    <td>@User.LName</td>
                    <td>@Html.DisplayFor(M => User.Email)</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join(",",User.Roles)</td>
                    <partial name="_ButtonsPartial" model="User.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3> There is No Users </h3>
    </div>
}



