@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center align-content-center p-5 mt-5">
	<div class="col-lg-6 col-md-12 card-back p-5">
		<h4 class="mb-4 pb-3">Set New Password</h4>
		<form asp-action="ResetPassword" method="post">
			<div class="form-style" asp-validation-summary="All"></div>
			<div class="form-group mt-2">
				<input asp-for="NewPassword" class="form-style" placeholder="New Password">
				<i class="input-icon fa-solid fa-lock"></i>
				<span class="text-danger" asp-validation-for="NewPassword"></span>
			</div>
			<div class="form-group mt-2">
				<input asp-for="ConfirmPassword" class="form-style" placeholder="Confirm Password">
				<i class="input-icon fa-solid fa-lock"></i>
				<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
			</div>
			<div class="form-group mt-1">
				<input type="submit" value="Reset" class="btn mt-4" />
			</div>
		</form>
	</div>
</div>
@section ValidationSection{
	<partial name="_ValidationScriptsPartial" />
}


