@model DepartmentViewModel
<div class="form-group">
    <label class="col-form-label">Department Code</label>
    <input class="form-control" asp-for="Code" readonly />
    <span asp-validation-for="Code"></span>
</div>
<div class="form-group">
    <label class="col-form-label">Department Name</label>
    <input class="form-control" asp-for="Name" readonly />
    <span asp-validation-for="Name"></span>
</div>
<div class="form-group">
    <label class="col-form-label">Date Of Creation</label>
    <input readonly asp-for="DateOfCreation" />
    <span asp-validation-for="DateOfCreation"></span>
</div>
