@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
}
@if (TempData["Message"] is not null)
{
    <div id="message" class="alert alert-dismissible alert-success">
        @TempData["Message"].
    </div>
}
<h1>All Departments</h1>
<br />
<a asp-action="Create" class="btn btn-outline-primary "><i class="bi bi-plus-circle-dotted d-inline-block"> </i> Add Department</a>
<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead class="bg-info">
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>@Html.DisplayNameFor(D=>D.DateOfCreation)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Dept in Model)
            {
                <tr>
                    <td>@Dept.Code</td>
                    <td>@Dept.Name</td>
                    <td>@Dept.DateOfCreation</td>
                    <partial name="_ButtonsPartial" model="Dept.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3> There is No Departments </h3>
    </div>
}
<script src="~/js/site.js"></script>