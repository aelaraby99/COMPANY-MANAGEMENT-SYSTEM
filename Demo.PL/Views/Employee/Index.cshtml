@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<a asp-action="Create" class="btn btn-outline-primary">
    <i class="bi bi-plus-circle-dotted d-inline-block"> </i>
     Add Employee</a>
<br />
<br />
<div class="row justify-content-center align-items-center">
    <form class="row justify-content-between align-items-center col-8 offset-1" role="search">
        <input class="form-control w-75" type="search" placeholder="Search By Name" name="SearchValue">
        <button class="btn btn-outline-success w-25" type="submit">Search</button>
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-dark mt-4">
        <thead class="bg-info">
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Image)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.Department)</th>
                <th>@Html.DisplayNameFor(E => E.Address)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(E => E.HireDate)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td> <img src="~/Files/Images/@employee.ImageName" alt="@employee.Name Photo" width="80" class="img-fluid rounded-circle"> </td>
                    <td>@employee.Age</td>
                    <td>@Html.DisplayFor(M=> employee.Salary)</td>
                    <td>@Html.DisplayFor(M=> employee.Department.Name)</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(M => employee.Email)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.HireDate</td>
                    <td class="form-switch text-center pl-5">
                        <input class="form-check-input" asp-for="@employee.IsActive" disabled />
                    </td>
                    <partial name="_ButtonsPartial" model="employee.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3> There is No Employees </h3>
    </div>
}
