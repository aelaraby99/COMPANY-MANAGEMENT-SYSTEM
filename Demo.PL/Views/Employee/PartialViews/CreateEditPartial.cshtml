@model EmployeeViewModel
@inject IUnitOfWork _unitOfWork;
@{
    var departments = new SelectList(await _unitOfWork.DepartmentRepository.GetAll(), "Id", "Name");
}
<div class="form-group">
    <div class="d-flex flex-column align-items-center justify-content-center">
        @if (Model is null || Model.ImageName is null)
        {
            <img id="ImgPreview" src="~/Assets/profile-icon.jpg" class="opacity-25 img-fluid rounded-circle col-md-2 mb-1 " />
        }else
        {
            <img id="ImgPreview" src="~/Files/Images/@Model.ImageName" class="opacity-25 img-fluid rounded-circle col-md-2 mb-1 " />
        }
        <label class="btn btn-outline-primary" asp-for="Image"><input class="opacity-0 position-absolute" asp-for="Image" id="ImageInput" onchange="previewImage(this)" />Profile Pic <i class="bi bi-upload"></i></label>
    </div>
    <span class="text-danger" asp-validation-for="Image"></span>
</div>
<div class="form-group ">
    <input placeholder="Employee Name" class="form-control" asp-for="Name" />
    <span class="text-danger" asp-validation-for="Name"></span>
</div>
<div class="form-group">
    <input placeholder="Employee Age" class="form-control" asp-for="Age" />
    <span class="text-danger" asp-validation-for="Age"></span>
</div>
<div class="form-group">
    <input placeholder="Employee Salary" class="form-control" asp-for="Salary" />
    <span class="text-danger" asp-validation-for="Salary"></span>
</div>
<div class="form-group">
    <input placeholder="Employee Address" class="form-control" asp-for="Address" />
    <span class="text-danger" asp-validation-for="Address"></span>
</div>
<div class="form-group">
    <input placeholder="Employee Email" class="form-control" asp-for="Email" />
    <span class="text-danger" asp-validation-for="Email"></span>
</div>
<div class="form-group">
    <input placeholder="Employee Phone Number" class="form-control" asp-for="PhoneNumber" />
    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-for="DepartmentId" asp-items="@departments">
    </select>

</div>
<div class="form-group">
    <input placeholder="Employee Hiring Date" class="form-control" asp-for="HireDate" />
    <span class="text-danger" asp-validation-for="HireDate"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="IsActive">Employee Status</label>
    <div class="form-check form-switch d-flex justify-content-center">
        <input class="form-check-input" placeholder="Employee Status" asp-for="IsActive" />
    </div>
</div>