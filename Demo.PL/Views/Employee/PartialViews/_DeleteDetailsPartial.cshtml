@model EmployeeViewModel
@inject IUnitOfWork _unitOfwwork;
@{
    var departments = new SelectList(await _unitOfwwork.DepartmentRepository.GetAll(), "Id", "Name");
}
<div class="form-group d-flex justify-content-center pt-3 pb-0">
    <img asp-for="@Model.ImageName" src="~/Files/Images/@Model.ImageName" alt="@Model.Name Photo" width="15%" class="img-fluid rounded-circle" />
</div>
<div class="form-group mt-0">
    <label class="col-form-label" asp-for="Name"></label>
    <input placeholder="Employee Name" class="form-control" asp-for="Name" readonly />
    <span class="text-danger" asp-validation-for="Name"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input placeholder="Employee Age" class="form-control" asp-for="Age" readonly />
    <span class="text-danger" asp-validation-for="Age"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input placeholder="Employee Salary" class="form-control" asp-for="Salary" readonly />
    <span class="text-danger" asp-validation-for="Salary"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input placeholder="Employee Address" class="form-control" asp-for="Address" readonly />
    <span class="text-danger" asp-validation-for="Address"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input placeholder="Employee Email" class="form-control" asp-for="Email" readonly />
    <span class="text-danger" asp-validation-for="Email"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input placeholder="Employee Phone Number" class="form-control" asp-for="PhoneNumber" readonly />
    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-for="DepartmentId" class="form-control" disabled asp-items="@departments">
    </select>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input placeholder="Employee Hiring Date" class="form-control" asp-for="HireDate" readonly />
    <span class="text-danger" asp-validation-for="HireDate"></span>
</div>
<div class="form-group ">
     <label class="col-form-label" asp-for="IsActive">Employee Status</label>
    <div class="form-check form-switch d-flex justify-content-around align-items-center">
        <input class="form-check-input" asp-for="IsActive" disabled />
    </div>
</div>